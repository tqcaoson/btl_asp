<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Assets/Admin/vendor/vender-2/vendor3/datepicker/daterangepicker.css" rel="stylesheet" media="all">
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/scripts.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Dashboard", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (Session["username"] != null)
                    {
                        <li>@Html.ActionLink("BaiHat", "showBH", "BaiHat")</li>
                        <li>@Html.ActionLink("NhacSi", "Index", "NhacSi")</li>
                        <li>@Html.ActionLink("DongNhac", "Index", "DongNhac")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li>@Html.ActionLink("LogOut", "LogOut", "Auth")</li>
                    }
                    }
                    @if (Session["username"] == null)
                    {
                        <li>@Html.ActionLink("Login", "DangNhap", "Auth")</li>
                        <li>@Html.ActionLink("Signin", "DangKy", "Auth")</li>
                    }

                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
