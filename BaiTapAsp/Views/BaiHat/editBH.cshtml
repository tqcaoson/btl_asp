@using BaiTapAsp.Models
@model BaiHat

@{
    ViewBag.Title = "editBH";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Bài Hát</h4>
        <p class="text-danger" id="errorMessage">@ViewBag.Message</p>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Chọn nhạc sĩ</label>
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.Id_nhacsi, (List<SelectListItem>)ViewBag.NhacSi, "Chọn nhạc sĩ", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Id_nhacsi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Chọn dòng nhạc</label>
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.Id_dongnhac, (List<SelectListItem>)ViewBag.DongNhac, "Chọn dòng nhạc", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Id_dongnhac, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tên bài hát</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ten_bai_hat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ten_bai_hat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ngày đăng</label>
            <div class="col-md-10">
                <input type="date" value="@Model.NgayDang.ToString("yyyy-MM-dd")" name="NgayDang" required class = "form-control"/>
                @Html.ValidationMessageFor(model => model.NgayDang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Lượt nghe</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.LuotNghe, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LuotNghe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "showBH")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
